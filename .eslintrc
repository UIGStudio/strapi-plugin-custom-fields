{
    "parser": "@babel/eslint-parser",
    "extends": "eslint:recommended",
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "browser": true
    },
    "parserOptions": {
        "requireConfigFile": false,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "globals": {
        "strapi": true
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-console": 0,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
